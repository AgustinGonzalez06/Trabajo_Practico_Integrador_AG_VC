<h1>Productos</h1>
<a href="/admin/productos/agregar">Agregar producto</a>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Categor√≠a</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% productos.forEach(p => { %>
      <tr>
        <td><%= p.nombre %></td>
        <td>$<%= p.precio %></td>
        <td><%= p.categoria %></td>
        <td>
          <a href="/admin/productos/editar/<%= p.id %>">Editar</a>
          <form method="POST" action="/admin/productos/eliminar/<%= p.id %>" style="display:inline;">
            <button type="submit">Eliminar</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
